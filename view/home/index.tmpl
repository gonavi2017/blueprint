{{define "title"}}Block{{end}}
{{define "head"}}{{end}}
{{define "content"}}
	{{if eq .AuthLevel "auth"}}

		<div class="page-header">
			<h1>Hello, {{.first_name}}</h1>
		</div>
		<p>You have arrived. Click {{LINK "block" "here"}} to view your blocks.</p>
		{{template "form" .}}
	{{else}}

		<div class="page-header">
			<h1>{{template "title" .}}</h1>
		</div>
		<p>Click {{LINK "login" "here"}} to login.</p>

	{{end}}

	{{template "footer" .}}
{{end}}
{{define "foot"}}{{end}}
