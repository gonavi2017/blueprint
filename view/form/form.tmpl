
{{define "form"}}
	<div class="row">
			<ul class="nav nav-tabs">
				{{range $n := .forms}}
					{{if .StatusID}}
						<li class = "active">
					{{else}}
						<li>
					{{end}}
					<a href="{{$.BaseURI}}form/view/{{.ID}}">{{.Name}}</a>
					</li>
				{{end}}
			</ul>
			<div class="col-md-12 col-sm-12 col-lg-12">
				{{range $n := .forms}}
					{{if .StatusID}}
						{{if eq .ID 1}}
							{{template "financial"}}
						{{end}}
						{{if eq .ID 2}}
							{{template "marriage"}}
						{{end}}
					{{end}}
				{{end}}
				</div>
		</div>
{{end}}
