{{define "title"}}Items{{end}}
{{define "head"}}{{end}}
{{define "content"}}
	<style type="text/css">
			.footer {
				position: fixed;
				bottom: 0;
				width: 100%;
				/* Set the fixed height of the footer here */
				height: 60px;
				line-height: 60px; /* Vertically center the text there */
				background-color: #f5f5f5;
			}

			#custom-search-input{
				border-radius: 6px;
				background-color: #fff;
				padding-top:1.5%;
				}

				#custom-search-input input{
					border: 0;
					box-shadow: none;
				}

				#custom-search-input button{
					margin: 2px 0 0 0;
					background: none;
					box-shadow: none;
					border: 0;
					color: #666666;
					padding: 0 8px 0 10px;
					border-left: solid 1px #ccc;
				}

				#custom-search-input button:hover{
					border: 0;
					box-shadow: none;
					border-left: solid 1px #ccc;
				}

				#custom-search-input .glyphicon-search{
					font-size: 23px;
				}

				#display_queries{
					
					padding-left: 2%;
					padding-right: 2%;
					background-color: #F8F8F8;

				}

				#dynamic_content{
					border-left: solid 1px #ccc;
					padding-left: 2.5%;
				}
	</style>
	<script type="text/JavaScript">
			$(function(){
			$('#search').keyup(function(){  
				var current_query = $('#search').val();
				if (current_query !== "") {
				$(".list-group li").hide();
				$(".list-group li").each(function(){
					var current_keyword = $(this).text();
					if (current_keyword.indexOf(current_query) >=0) {
					$(this).show();       
					};
				});     
				} else {
				$(".list-group li").show();
				};
			});
			});
	</script>
    <div class="rows container-fluid" style="padding-top: 3%">
      
      <!-- List of Networks -->
      <div class="col-sm-12 col-md-2 col-lg-2">
          <div id="custom-search-input">
            <div class="input-group col-md-12">
              <input id="search" type="text" class="form-control input-lg" placeholder="Search">
              <span class="input-group-btn">
                <button class="btn btn-info btn-lg" type="button">
                  <i class="glyphicon glyphicon-search"></i>
                </button>
              </span>
            </div>
            <ul class="list-group">
              <li class="list-group-item"><b>Services</b></li>
              <li class="list-group-item">IT</li>
              <li class="list-group-item">Business Intelligence</li>
              <li class="list-group-item">Financial Engineering</li>
              <li class="list-group-item">IOT</li>
              <li class="list-group-item">Management</li>
              <li class="list-group-item">Finance</li>
              <li class="list-group-item">CRM</li>
              <li class="list-group-item">SAP</li>
              <li class="list-group-item"><b>Languages</b></li>
              <li class="list-group-item">Python</li>
              <li class="list-group-item">Java</li>
              <li class="list-group-item">C++</li>
              <li class="list-group-item"><b>Database</b></li>
              <li class="list-group-item">Mongo DB</li>
              <li class="list-group-item">MYSQL</li>
            </ul>
          </div>
      </div>
      <!-- List of Networks -->
      

      <!-- Main Staging Area-->
   
      <div class="col-sm-12 col-md-6 col-lg-6">
        <div id="display_queries">
            <center><h3>Issues</h3></center>
						
				<div class="page-header">
					<h1>Items</h1>
				</div>

			<p>
					<a title="Add" class="btn btn-primary" role="button" href="{{$.CurrentURI}}/create">
						<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add
					</a>
				</p>
				
				{{range $n := .items}}
					<div class="panel panel-default">
						<div class="panel-body">
							<p>{{.Name}}</p>
							<div style="display: inline-block;">
								<a title="View" class="btn btn-info" role="button" href="{{$.CurrentURI}}/view/{{.ID}}">
									<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> View
								</a>
								<a title="Edit" class="btn btn-warning" role="button" href="{{$.CurrentURI}}/edit/{{.ID}}">
									<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
								</a>
								
								<form class="button-form" method="post" action="{{$.CurrentURI}}/{{.ID}}?_method=delete">
									<button onclick="return confirm('Are you sure?')" type="submit" class="btn btn-danger" />
										<span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
									</button>
									<input type="hidden" name="_token" value="{{$.token}}">
								</form>
								
							</div>
							<span class="pull-right" style="margin-top: 14px;">{{PRETTYTIME .CreatedAt .UpdatedAt}}</span>
						</div>
					</div> 
          </div>
      </div>


      <div class="col-sm-12 col-md-4 col-lg-4">
        <div id="dynamic_content">
          <center><h3>Your Query</h3></center>
          <form>
            <div class="form-group">
              <label for="exampleInputEmail1">Email address</label>
              <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
              <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
              <label for="nameInput">Name</label>
              <input type="text" class="form-control" id="nameInput" placeholder="Name">
            </div>
            <div class="form-group">
              <label for="genderselect">Gender</label>
              <select class="form-control" id="genderselect">
                <option>Male</option>
                <option>Female</option>
                <option>Other</option>
              </select>
            </div>
            <div class="form-group">
              <label for="dob">DOB</label>
              <input type="text" class="form-control" id="nameInput" placeholder="MM/DD/YYYY">
            </div>
            <div class="form-group">
              <label for="exampleSelect2">City</label>
              <select multiple="" class="form-control" id="exampleSelect2">
                <option>New York</option>
                <option>Los Angeles</option>
                <option>Chicago</option>
                <option>Phoenix</option>
                <option>San Diego</option>
                <option>Charlotte</option>
                <option>Seattle</option>
                <option>El Paso</option>
              </select>
            </div>
            <div class="form-group">
              <label for="exampleTextarea">Your Problem</label>
              <textarea class="form-control" id="exampleTextarea" rows="3"></textarea>
            </div>
            <div class="form-group">
              <label for="exampleInputFile">File input</label>
              <input type="file" class="form-control-file" id="exampleInputFile" aria-describedby="fileHelp">
              <small id="fileHelp" class="form-text text-muted">Upload a file or document giving a proper explanation of your issue.</small>
            </div>
            <fieldset class="form-group">
              <legend>Radio buttons</legend>
              <div class="form-check">
                <label class="form-check-label">
                  <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios1" value="option1" checked="">
                  Urget Issue(Level 3) - Prime Service Time 3 hours
                </label>
              </div>
              <div class="form-check">
              <label class="form-check-label">
                  <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios2" value="option2">
                  Imporant Issue(Level 2) - Service Time 24 - 48 hours
                </label>
              </div>
              <div class="form-check">
              <label class="form-check-label">
                  <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios3" value="option3" disabled="">
                 Issue(Level 1) - Service Time 48 - 72 hours
                </label>
              </div>
            </fieldset>
            <div class="form-check">
              <label class="form-check-label">
                <input type="checkbox" class="form-check-input">
                Send my issue to experts
              </label>
            </div>
            <center><button type="submit" class="btn btn-primary">Submit</button></center>
          </form>
        </div>
      </div>
      <!-- Main Staging Area-->
    </div>
{{end}}
	
	{{PAGINATION .pagination .}}
	
	{{template "footer" .}}
{{end}}
{{define "foot"}}{{end}}